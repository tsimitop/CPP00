void PhoneBook::addContact(int id)
{
	std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');

	std::cout << id << ": What is your contact's first name?" << std::endl;
	acceptValidField(contacts[id].first_name);
	std::cout << "Check first_name validity " << contacts[id].first_name << std::endl;
}

void	PhoneBook::acceptValidField(std::string field)
{
	std::getline(std::cin, field);
	std::cout << "Check field validity " << field << std::endl;
	if (field.empty())
	{
		std::cout << "entered empty if statement" << std::endl;
		while (field.empty())
		{
			std::cout << "No field of you contact may be empty. Please provide an input." << std::endl;
			std::getline(std::cin, field);
		}
	}
}